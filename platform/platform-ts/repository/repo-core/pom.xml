<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>org.tura.platform-ts</groupId>
		<artifactId>repository</artifactId>
		<version>2.0</version>
	</parent>

	<groupId>org.tura.platform-ts.repository</groupId>
	<artifactId>repo-core</artifactId>
    <packaging>jar</packaging>

	<name>Tura :: Platform :: TS :: Repository :: Core</name>
	<url>http://sourceforge.net/p/tura/wiki/Home/</url>


	<properties>
		<src.dir>../../../platform-java/repository/core/src/main/java/</src.dir>
	</properties>


	<dependencies>

		<dependency>
			<groupId>org.jsweet</groupId>
			<artifactId>j4ts</artifactId>
		</dependency>

		<dependency>
			<groupId>org.tura.platform-ts</groupId>
			<artifactId>ts-sql-dsl</artifactId>
		</dependency>

		<dependency>
			<groupId>org.tura.platform-ts.datacontrol</groupId>
			<artifactId>dc-commons</artifactId>
		</dependency>


		<dependency>
			<groupId>org.jsweet</groupId>
			<artifactId>jsweet-transpiler</artifactId>
		</dependency>

		<dependency>
			<groupId>org.jsweet</groupId>
			<artifactId>jsweet-core</artifactId>
		</dependency>

		<dependency>
			<groupId>org.tura.platform-java.repository</groupId>
			<artifactId>core</artifactId>
		</dependency>

	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.jsweet</groupId>
				<artifactId>jsweet-maven-plugin</artifactId>
				<version>${version.jsweet.transpiler}</version>
				<executions>
					<execution>
						<id>generate-js</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>jsweet</goal>
						</goals>
						<configuration>
							<verbose>true</verbose>
							<outDir>${project.basedir}/target</outDir>
							<tsOut>${project.basedir}/target</tsOut>
							<tsOnly>true</tsOnly>
							<workingDir>${project.basedir}</workingDir>
							<targetVersion>ES6</targetVersion>
							<module>es2015</module>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<artifactId>maven-antrun-plugin</artifactId>
				<version>1.8</version>
				<executions>
					<execution>
						<id>default-cli</id>
						<phase>process-sources</phase>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<target>
								<concat
									destfile="${project.basedir}/src/main/resources/META-INF/resources/webjars/${project.artifactId}/${project.version}/${project.artifactId}.ts"
									force="yes">
									<filelist dir="${project.basedir}/target">

										<file name="org/tura/platform/object/model/DomainObject.ts"/>
										<file name="org/tura/platform/object/TuraObject.ts"/>
										<file name="org/tura/platform/repository/core/BasicRepository.ts"/>
										<file name="org/tura/platform/repository/core/Command.ts"/>
										<file name="org/tura/platform/repository/core/DataProvider.ts"/>
										<file name="org/tura/platform/repository/core/ExtendedQuery.ts"/>
										<file name="org/tura/platform/repository/core/ObjectControl.ts"/>
										<file name="org/tura/platform/repository/core/PrImaryKeyStrategy.ts"/>
										<file name="org/tura/platform/repository/core/Repository.ts"/>
										<file name="org/tura/platform/repository/core/RepositoryException.ts"/>
										<file name="org/tura/platform/repository/core/Rule.ts"/>
										<file name="org/tura/platform/repository/core/SearchRequest.ts"/>
										<file name="org/tura/platform/repository/core/SearchResult.ts"/>
										<file name="org/tura/platform/repository/core/Triggers.ts"/>
										<file name="org/tura/platform/repository/proxy/ProxyCommadStackProvider.ts"/>
										<file name="org/tura/platform/repository/proxy/ProxyObjectUpdateListener.ts"/>
										<file name="org/tura/platform/repository/proxy/ProxyRepositoryCommand.ts"/>

									</filelist>
								</concat>
								<exec executable="${user.home}/.jsweet-node_modules/bin/tsc"/>
								
                                <move file="${project.basedir}/src/main/resources/META-INF/resources/webjars/${project.artifactId}/${project.version}/${project.artifactId}.d.ts" 
                                           todir="${project.basedir}/src/main/resources/META-INF/resources/typings/${project.artifactId}/${project.version}"/>								
								
								<concat
									destfile="${project.basedir}/src/main/resources/META-INF/resources/webjars/${project.artifactId}/${project.version}/${project.artifactId}.jsq"
									force="yes">
									<filelist dir="${project.basedir}/src/main/resources/">
										<file name="header" />
										<file name="META-INF/resources/webjars/${project.artifactId}/${project.version}/${project.artifactId}.js" />
									</filelist>
								</concat>
                               <delete file="${project.basedir}/src/main/resources/META-INF/resources/webjars/${project.artifactId}/${project.version}/${project.artifactId}.js"/>
                               <move file="${project.basedir}/src/main/resources/META-INF/resources/webjars/${project.artifactId}/${project.version}/${project.artifactId}.jsq" 
                               tofile="${project.basedir}/src/main/resources/META-INF/resources/webjars/${project.artifactId}/${project.version}/${project.artifactId}.js"/>								
								
								
							</target>
						</configuration>
					</execution>
				</executions>
			</plugin>

			<plugin>
				<artifactId>maven-clean-plugin</artifactId>
				<configuration>
					<filesets>
						<fileset>
							<directory>${project.basedir}/src/main/resources/META-INF/resources/</directory>
						</fileset>
					</filesets>
				</configuration>
			</plugin>
		</plugins>
		<sourceDirectory>${src.dir}</sourceDirectory>
	</build>

</project>
