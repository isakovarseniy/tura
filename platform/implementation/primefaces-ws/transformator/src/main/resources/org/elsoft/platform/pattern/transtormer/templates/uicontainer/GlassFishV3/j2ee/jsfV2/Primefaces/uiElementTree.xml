<j:jelly trim="false" xmlns:j="jelly:core" xmlns:u="jelly:util"
	xmlns:a="jelly:ant" xmlns="http://www.w3.org/1999/xhtml" xmlns:h="http://java.sun.com/jsf/html"
	xmlns:f="http://java.sun.com/jsf/core" xmlns:ui="http://java.sun.com/jsf/facelets"
	xmlns:p="http://primefaces.org/ui" xmlns:x="jelly:xml">

	<p:tree id="tura${uiElement.uuid}" style="${uiElement.css}"
		value="#{${model.uicontainer}binding.${uiElement.dataSrcLnk.name}.root}"
		var="row" dynamic="true" cache="false" selectionMode="single"
		selection="#{${model.uicontainer}binding.${uiElement.dataSrcLnk.name}.selectedNode}">

		<p:ajax event="expand" 
			listener="#{${model.uicontainer}binding.${uiElement.dataSrcLnk.name}.onNodeExpand}" />
		<p:ajax event="collapse"
			listener="#{${model.uicontainer}binding.${uiElement.dataSrcLnk.name}.onNodeCollapse}" />
			
		<x:element name="p:ajax" URI="http://primefaces.org/ui">
			<x:attribute name="listener">#{${model.uicontainer}binding.${uiElement.dataSrcLnk.name}.onNodeSelect}</x:attribute>
			<x:attribute name="event">select</x:attribute>
			<j:choose>
				<j:when test="${uiElement.propertiesExtender['OnRawSelect'] != null and uiElement.propertiesExtender['OnRawSelect'] !=''}">
					<x:attribute name="update" trim="true">${uiElement.propertiesExtender['OnRawSelect']}
					</x:attribute>
				</j:when>
			</j:choose>
		</x:element>
			
			
		<p:ajax event="unselect" 
			listener="#{${model.uicontainer}binding.${uiElement.dataSrcLnk.name}.onNodeUnselect}" />

		<p:treeNode>
	        <j:set var="context" value="Tree"/>
			<j:import file="${RootTemplate}/GlassFishV3/j2ee/jsfV2/deeper.xml"
				inherit="true" />
	        <j:set var="context" value=""/>

		</p:treeNode>
	</p:tree>

</j:jelly>
