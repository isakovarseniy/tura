<j:jelly trim="false" xmlns:j="jelly:core" xmlns:u="jelly:util"
	xmlns:a="jelly:ant" xmlns="http://www.w3.org/1999/xhtml" xmlns:h="http://java.sun.com/jsf/html"
	xmlns:f="http://java.sun.com/jsf/core" xmlns:ui="http://java.sun.com/jsf/facelets"
	xmlns:p="http://primefaces.org/ui" xmlns:x="jelly:xml">

	<p:dialog header="Lov" widgetVar="lov${lov.uuid.replaceAll('\-','')}"
		resizable="false" >
 		<h:panelGrid columns="2">
			<p:commandButton xmlns:p="http://primefaces.org/ui"
				value="Search"
				actionListener="#{${model.uicontainer}binding.${lov.optionsSrcLnk.name}.search}"
				update=":window:table${lov.uuid.replaceAll('\-','')}"></p:commandButton>
			<p:commandButton xmlns:p="http://primefaces.org/ui"
				value="Query"
				actionListener="#{${model.uicontainer}binding.${lov.optionsSrcLnk.name}.query}"
				update=":window:table${lov.uuid.replaceAll('\-','')}"></p:commandButton>
		</h:panelGrid>

		<p:dataTable var="row" id="table${lov.uuid.replaceAll('\-','')}"
			value="#{${model.uicontainer}binding.${lov.optionsSrcLnk.name}.lazyModel}"
			paginator="true" rows="5" lazy="true"
			paginatorTemplate="{RowsPerPageDropdown}  {PreviousPageLink}  {NextPageLink}"
			rowsPerPageTemplate="5,10,15" selectionMode="single" rowKey="#{row}">

			<p:ajax event="rowSelect"
				listener="#{${model.uicontainer}binding.${lov.optionsSrcLnk.name}.setGridCurrentRow}" />

			<j:forEach items="${lov.displayedFields.iterator()}" var="field">
				<p:column headerText="${field.displayLabel}">

				<ui:fragment rendered="#{${model.uicontainer}binding.${lov.optionsSrcLnk.name}.queryMode}">
					<p:inputText value="#{row.${field.displayExpression}}" >
					   <p:ajax event="focus" listener="#{${model.uicontainer}binding.${lov.optionsSrcLnk.name}.onFocusEvent}"/>
					   <p:ajax event="blur" />
					</p:inputText>
				</ui:fragment>
				<ui:fragment rendered="#{!${model.uicontainer}binding.${lov.optionsSrcLnk.name}.queryMode}">
					<h:outputText value="#{row.${field.displayExpression}}" >
					</h:outputText>
				</ui:fragment>
				</p:column>
			</j:forEach>
		</p:dataTable>
    
	<x:element name="p:commandButton" URI="http://primefaces.org/ui">
		<x:attribute name="value">Submit</x:attribute>
		<x:attribute name="oncomplete">lov${lov.uuid.replaceAll('\-','')}.hide();</x:attribute>
		<j:choose>
			<j:when test="${lov.propertiesExtender['OnValueChanged'] != ''}">
				<x:attribute name="update" trim="true">${lov.propertiesExtender['OnValueChanged']}
				</x:attribute>
			</j:when>
		</j:choose>
		<x:attribute name="actionListener">#{${model.uicontainer}binding.${lov.optionsSrcLnk.name}.returnResult}</x:attribute>
	</x:element>
			

	</p:dialog>


</j:jelly>
