<j:jelly trim="false" xmlns:j="jelly:core"  xmlns:u="jelly:util" xmlns:a="jelly:ant">

	<j:set var="serviceOutputDir"
		value="${GeneratedCodeRoot}/${domain}/${functionalDomain}/${application}/datasource" />



	<a:mkdir
		dir="${serviceOutputDir}/src/main/java/${model.resPackageName.replace('.','/')}" />

	<j:file
		name="${serviceOutputDir}/src/main/java/${model.resPackageName.replace('.','/')}/${model.resTypeName}.java"
		trim="true" omitXmlDeclaration="true" escapeText="false">


package ${model.resPackageName};

import javax.transaction.TransactionManager;
import org.elsoft.platform.persistence.ELsoftJPAEntityService;
import ${model.generic.resPackageName}.${model.generic.resTypeName};
import java.util.List;

public class ${model.resTypeName}  extends ELsoftJPAEntityService{

 	public ${model.resTypeName}(TransactionManager tx) {
		super(tx);
	}
	
    <j:set var="whiteSpace" value=" "/> 
	<j:forEach items="${model.methods.iterator()}" var="method">
	
	public${whiteSpace}<j:if test="${method.returnType == null}">void </j:if><j:if test="${method.returnType != null}">${method.returnType.resPackageName}.${method.returnType.resTypeName} </j:if> ${method.methodName}(
	
         <j:set var="iter" value="0"/>  
	     <j:forEach items="${method.paramClass.iterator()}" var="param">
	       <j:if test="${iter =='1'}">,</j:if>${param.type.resPackageName}.${param.type.resTypeName} ${param.name}
           <j:set var="iter" value="1"/>  
	     </j:forEach>
	
			<j:import file="${RootTemplate}/GlassFishV3/j2ee/jpa/${method.methodName}Method.xml"
				inherit="true" />
    </j:forEach>    
	
	
}

  </j:file>

</j:jelly>
