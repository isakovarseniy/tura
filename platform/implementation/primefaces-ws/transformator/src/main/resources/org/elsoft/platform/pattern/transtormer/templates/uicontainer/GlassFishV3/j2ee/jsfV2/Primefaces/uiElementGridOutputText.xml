<j:jelly trim="false" xmlns:j="jelly:core" xmlns:u="jelly:util"
	xmlns:a="jelly:ant" xmlns="http://www.w3.org/1999/xhtml" xmlns:h="http://java.sun.com/jsf/html"
	xmlns:f="http://java.sun.com/jsf/core" xmlns:ui="http://java.sun.com/jsf/facelets"
	xmlns:p="http://primefaces.org/ui" xmlns:x="jelly:xml">

	<!-- Grid context -->
	<p:column headerText="${uiElement.label}">
		<ui:fragment
			rendered="#{!${model.uicontainer}binding.${uiElement.parent.dataSrcLnk.name}.queryMode}">
			<x:element name="p:inputText" URI="http://primefaces.org/ui">
				<x:attribute name="style">${uiElement.css}</x:attribute>
				<x:attribute name="value">#{row.${uiElement.dataSrcField.name}}</x:attribute>
				<x:attribute name="readonly" trim="true">true</x:attribute>

				<p:ajax event="blur" />
				<x:element name="p:ajax" URI="http://primefaces.org/ui">
					<x:attribute name="event">focus</x:attribute>
					<x:attribute name="listener">#{${RawSelectionLink}.onFocusEvent}
					</x:attribute>
					<j:choose>
						<j:when test="${OnRawSelect != ''}">
							<x:attribute name="update" trim="true">${OnRawSelect}
							</x:attribute>
						</j:when>
					</j:choose>
					
				</x:element>
			</x:element>
		</ui:fragment>
		<ui:fragment
			rendered="#{${model.uicontainer}binding.${uiElement.parent.dataSrcLnk.name}.queryMode}">
			<h:panelGrid columns="2" style="${uiElement.css};">

				<p:selectOneMenu immediate="true" style="width:40px;"
					value="#{row.comparator${uiElement.propertiesExtender['capSrcField']}}">
					<f:selectItem itemLabel="=" itemValue="EQ" />
					<f:selectItem itemLabel=">" itemValue="GT" />
					<f:selectItem itemLabel=">=" itemValue="GTEQ" />
					<f:selectItem itemLabel="&lt;" itemValue="LT" />
					<f:selectItem itemLabel="&lt;=" itemValue="LTEQ" />
					<f:selectItem itemLabel="%" itemValue="LIKE" />
	                <p:ajax update="@this"/>
				</p:selectOneMenu>
				<p:inputText style="width:100%" 
					value="#{row.${uiElement.dataSrcField.name}}">
					<p:ajax event="blur" />
					<x:element name="p:ajax" URI="http://primefaces.org/ui">
						<x:attribute name="event">focus</x:attribute>
						<x:attribute name="listener">#{${RawSelectionLink}.onFocusEvent}
						</x:attribute>
						<j:choose>
							<j:when test="${OnRawSelect != ''}">
								<x:attribute name="update" trim="true">${OnRawSelect}
								</x:attribute>
							</j:when>
						</j:choose>
					</x:element>
				</p:inputText>
			</h:panelGrid>
		</ui:fragment>


	</p:column>


</j:jelly>
