<j:jelly trim="false" xmlns:j="jelly:core" xmlns:u="jelly:util"
	xmlns:a="jelly:ant" xmlns="http://www.w3.org/1999/xhtml" xmlns:h="http://java.sun.com/jsf/html"
	xmlns:f="http://java.sun.com/jsf/core" xmlns:ui="http://java.sun.com/jsf/facelets"
	xmlns:p="http://primefaces.org/ui" xmlns:x="jelly:xml">

	<p:dataTable var="row" id="tura${uiElement.uuid}" style="${uiElement.css}"
		value="#{${model.uicontainer}binding.${uiElement.dataSrcLnk.name}.lazyModel}"
		paginator="true" rows="${uiElement.rowNumber}" lazy="true"
		paginatorTemplate="{RowsPerPageDropdown}  {PreviousPageLink}  {NextPageLink}"
		rowsPerPageTemplate="${uiElement.rowNumber},5,10,15" selectionMode="single"
		rowKey="#{row}">

        <j:set var="OnRawSelect" value="${uiElement.propertiesExtender['OnRawSelect']}"/>
        <j:set var="RawSelectionLink" value="${model.uicontainer}binding.${uiElement.dataSrcLnk.name}"/>
        
		<x:element name="p:ajax" URI="http://primefaces.org/ui">
			<x:attribute name="event">rowSelect</x:attribute>
			<x:attribute name="listener">#{${model.uicontainer}binding.${uiElement.dataSrcLnk.name}.setGridCurrentRow}</x:attribute>
			<x:attribute name="event">rowSelect</x:attribute>
			<j:choose>
				<j:when test="${uiElement.propertiesExtender['OnRawSelect'] != null and uiElement.propertiesExtender['OnRawSelect'] != ''}">
					<x:attribute name="update" trim="true">${uiElement.propertiesExtender['OnRawSelect']}
					</x:attribute>
				</j:when>
			</j:choose>
		</x:element>

         <j:if test="${uiElement.drugable}">
           <p:column style="width:20px">  
                <h:outputText id="dragIcon"  
                    styleClass="ui-icon ui-icon-arrow-4" />  
                <p:draggable for="dragIcon" revert="true" />  
            </p:column>   
         </j:if>   

		<j:set var="context" value="Grid" />

		<j:import file="${RootTemplate}/GlassFishV3/j2ee/jsfV2/deeper.xml"
			inherit="true" />


		<j:set var="context" value="" />
        <j:set var="OnRawSelect" value=""/>
        <j:set var="RawSelectionLink" value=""/>
 

	</p:dataTable>
</j:jelly>                    
