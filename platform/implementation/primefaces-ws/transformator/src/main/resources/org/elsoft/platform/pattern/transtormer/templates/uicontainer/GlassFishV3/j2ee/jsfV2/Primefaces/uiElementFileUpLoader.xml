<j:jelly trim="false" xmlns:j="jelly:core" xmlns:u="jelly:util"
	xmlns:a="jelly:ant" xmlns="http://www.w3.org/1999/xhtml" xmlns:h="http://java.sun.com/jsf/html"
	xmlns:f="http://java.sun.com/jsf/core" xmlns:ui="http://java.sun.com/jsf/facelets"
	xmlns:p="http://primefaces.org/ui" xmlns:x="jelly:xml">

	<ui:fragment
		rendered="#{!${model.uicontainer}binding.current${uiElement.dataSrcLnk.name}.queryMode}">

		<j:set var="readonlyExpression" value="false" />
		<j:choose>
			<j:when
				test="${uiElement.propertiesExtender['readonly_expression'] != null and uiElement.propertiesExtender['readonly_expression'] != ''}">
				<j:set var="readonlyExpression"
					value="${uiElement.propertiesExtender['readonly_expression']}" />
			</j:when>
		</j:choose>

		<ui:fragment rendered="#{!${readonlyExpression}}">
			<p:fileUpload id="tura${uiElement.uuid}" fileUploadListener="#{${model.uicontainer}binding.current${uiElement.dataSrcLnk.name}.fileLoader}"
				mode="advanced" onstart="tura${uiElement.uuid.replaceAll('\-','')}remotecomand()" style="${uiElement.css}"/>

			<p:remoteCommand name="tura${uiElement.uuid.replaceAll('\-','')}remotecomand">
				<f:setPropertyActionListener value="${uiElement.dataSrcField.name}"
					target="#{${model.uicontainer}binding.current${uiElement.dataSrcLnk.name}.field}" />
			</p:remoteCommand>

		</ui:fragment>

		<ui:fragment rendered="#{${readonlyExpression}}">
			<x:element name="p:inputText" URI="http://primefaces.org/ui">
				<x:attribute name="style">${uiElement.css}</x:attribute>
				<x:attribute name="value">NA</x:attribute>
				<x:attribute name="readonly">true</x:attribute>
			</x:element>
		</ui:fragment>
	</ui:fragment>
	<ui:fragment
		rendered="#{${model.uicontainer}binding.current${uiElement.dataSrcLnk.name}.queryMode}">
		<x:element name="p:inputText" URI="http://primefaces.org/ui">
			<x:attribute name="style">${uiElement.css}</x:attribute>
			<x:attribute name="value">NA</x:attribute>
			<x:attribute name="readonly">true</x:attribute>
		</x:element>
	</ui:fragment>
</j:jelly>
