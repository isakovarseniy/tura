[%@template
operation CheckBox treeContext(hash,value) { 
%]
<p:inplace editor="true" event="dblclick">
   [%=self.rw(hash,value)%]
</p:inplace>      
[%
}
%]

[%@template
operation CheckBox tableContext(hash,value) { 
%]
<p:cellEditor>
  <f:facet name="output">
     <span style="display: inline-block; width: 100%; height: 100%">
      [%=self.ro(hash,value)%]
     </span>
  </f:facet>
  <f:facet name="input">
     [%=self.rw(hash,value)%]
  </f:facet>
</p:cellEditor>  
[%   
}
%]

[%@template
operation CheckBox noContext(hash,value) { 
%]
   [%=self.rw(hash,value)%]
[%   
}
%]


[%@template
operation CheckBox rw(hash,value) { 
%]
<p:selectBooleanCheckbox  [%=self.mkUIDBinding()%] value="[%=value%]" [%=self.uiElementAttributes(hash)%] >
   [%=self.validator(hash)%]
   [%=self.convertor(hash)%]
</p:selectBooleanCheckbox>
[%
}
%]

[%@template
operation CheckBox ro(hash,value) { 
%]
<h:outputText value="[%=value%]">
   [%=self.readOnlyConverter(hash)%]
</h:outputText>
[%
}
%]
