[%@template
operation domain::Table draw(hash) { 
     hash.put("context","table");
%]
     [%=self.generateBody(hash)%]     
[%
     hash.put("context",null);
}
%]



[%@template
operation domain::Table generateBody(hash){
     var util = new Native('org.tura.metamodel.commons.Util');
%]
	<p:dataTable var="row" id="[%=self.mkuid()%]" [%=self.styleAttributes(hash)%] [%=self.enabled(hash)%] 
		value="#{viewmodel.getModel('[%=self.mkuid()%]','grid', [%=buildExpression(util.createArtificialContextValue(self.sourcePointer,self.sourcePointer.findTreeRoot(), null))%]).getLazyModel()}"
		paginator="true" rows="[%=self.rowNumber%]" lazy="true"
		paginatorTemplate="{RowsPerPageDropdown}  {PreviousPageLink}  {NextPageLink}"
		rowsPerPageTemplate="5,10,15" selectionMode="single"   rowKey="#{row}">
		<p:ajax event="rowSelect" listener="#{viewmodel.getModel('[%=self.mkuid()%]','grid', [%=buildExpression(util.createArtificialContextValue(self.sourcePointer,self.sourcePointer.findTreeRoot(), null))%]).setSelected}" [%=self.refreshArias()%]/>
		
[%
                for (element in self.cols){
%]                
                    [%=element.draw(hash)%]
[%
                }  
%]				
		
		</p:dataTable>	
[%
}
%]