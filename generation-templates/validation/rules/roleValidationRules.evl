 context permission::Role {

  constraint HasName {

      check :  self.name.isDefined()

      message : 'Unnamed ' + self.eClass().name + ' not allowed'

   }

   constraint UniqueName {

      guard : self.satisfies("HasName")
      check :  self.eContainer().roles.select(r|r.uid <> self.uid  and r.name.isDefined() and r.name=self.name).size()=0
      message : 'Name  ' + self.name + ' is not unique'

  }

  }
  
  
 context Group {

  constraint HasName {

      check :  self.name.isDefined()

      message : 'Unnamed ' + self.eClass().name + ' not allowed'

   }


   constraint UniqueName {

      guard : self.satisfies("HasName")
      check :  self.eContainer().groups.select(r|r.uid <> self.uid  and r.name.isDefined() and r.name=self.name).size()=0
      message : 'Name  ' + self.name + ' is not unique'

  }


  }  